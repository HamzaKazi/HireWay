
        <!-- Product section-->
        <section class="">
            <div class="">
                <div class="d-flex  mx-4 mt-4">
                    <div class="">
                      <img class="" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="..." />
                    </div>
                    <div class="p-4">
                        <div class="small mb-1"></div>
                        <h1 class=""><%= @vehicle.name %></h1>
                        <div class="">
